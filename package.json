{
  "name": "todolist-app",
  "version": "1.0.0",
  "description": "A minimalistic todo app with React frontend and Express.js API",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "cd server && npm start"
  },
  "dependencies": {
    "concurrently": "^8.2.0",
    "express": "^5.1.0"
  },
  "keywords": [
    "todo",
    "react",
    "express",
    "minimalistic"
  ],
  "author": "",
  "license": "MIT"
}
